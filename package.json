{
  "name": "nextjs-sanity-template",
  "version": "0.4.0",
  "private": true,
  "description": "A production-ready Next.js + Sanity CMS website factory with CMS-driven pages, SEO, PWA, and legal compliance.",
  "author": {
    "name": "Jayant Rohila",
    "url": "https://github.com/jayantrohila57"
  },
  "license": "MIT",
  "homepage": "https://github.com/jayantrohila57/nextjs-sanity-template",
  "repository": {
    "type": "git",
    "url": "https://github.com/jayantrohila57/nextjs-sanity-template.git"
  },
  "bugs": {
    "url": "https://github.com/jayantrohila57/nextjs-sanity-template/issues"
  },
  "keywords": [
    "nextjs",
    "sanity",
    "cms",
    "headless-cms",
    "website-template",
    "pwa",
    "seo",
    "isr",
    "vercel",
    "typescript",
    "app-router",
    "website-factory"
